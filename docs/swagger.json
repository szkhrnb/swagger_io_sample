    "/api/v1/articles/categories": {
      "get": {
        "summary": "カテゴリ一覧を取得します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "カテゴリ一覧が返却されます",
            "schema": {
              "type": "object",
              "properties": {
                "article_categories": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "eng_name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "カテゴリを新規作成します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string",
            "example": "testsite"
          },
          {
            "name": "article_category",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "カテゴリ名"
                },
                "eng_name": {
                  "type": "string",
                  "example": "category1"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "作成したカテゴリが返却されます"
          }
        }
      }
    },
