    "/api/v1/inquiries/reads/{id}": {
      "put": {
        "summary": "既読フラグをtrueにします",
        "tags": [
          "Inquiry"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "204 No Content が返却されます"
          },
          "401": {
            "description": "正しくないトークンを渡した場合は弾かれます"
          },
          "404": {
            "description": "存在しないIDを指定すると404が返却されます"
          }
        }
      }
    },
    "/api/v1/inquiries/{id}/replies": {
      "post": {
        "summary": "選択したお問い合わせに対する返信内容を送ります",
        "tags": [
          "Inquiry"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string",
            "example": "testsite"
          },
          {
            "name": "reply",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "subject": {
                  "type": "string",
                  "description": "タイトル"
                },
                "body": {
                  "type": "string",
                  "description": "本文"
                }
              },
              "required": [
                "subject",
                "body"
              ]
            },
            "required": [
              "reply"
            ]
          }
        ],
        "responses": {
          "204": {
            "description": "204 No Content が返却されます"
          },
          "401": {
            "description": "正しくないトークンを渡した場合は弾かれます"
          },
          "404": {
            "description": "サイト指定が不正 or 存在しないIDを指定すると404が返却されます"
          },
          "422": {
            "description": "作成失敗が返却されます"
          }
        }
      }
    },
    "/api/v1/inquiries": {
      "get": {
        "summary": "お問い合わせの一覧を取得します",
        "tags": [
          "Inquiry"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "お問い合わせ一覧が返却されます",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "ID"
                  },
                  "customer_name": {
                    "type": "string",
                    "description": "お問い合わせユーザー名"
                  },
                  "body": {
                    "type": "string",
                    "description": "本文"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "unstarted",
                      "started",
                      "finished"
                    ],
                    "description": "対応状況 unstarted: 未対応 started: 対応中 finished: 対応済"
                  },
                  "is_read": {
                    "type": "boolean",
                    "description": "既読か?"
                  },
                  "is_reply": {
                    "type": "boolean",
                    "description": "返信済みか?"
                  },
                  "is_customer_deleted": {
                    "type": "boolean",
                    "description": "お問い合わせユーザが削除されたか?"
                  },
                  "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "お問い合わせ日時"
                  }
                },
                "required": [
                  "id",
                  "status",
                  "is_read",
                  "is_reply",
                  "is_customer_deleted",
                  "created_at"
                ]
              }
            }
          },
          "401": {
            "description": "正しくないトークンを渡した場合は弾かれます"
          },
          "404": {
            "description": "不正なサイトを要求したとき"
          }
        }
      }
    },
    "/api/v1/inquiries/{id}": {
      "get": {
        "summary": "お問い合わせの詳細を取得します",
        "tags": [
          "Inquiry"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "お問い合わせ詳細が返却されます",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "お問い合わせID"
                },
                "customer_id": {
                  "type": "integer",
                  "description": "お問い合わせユーザID"
                },
                "customer_name": {
                  "type": "string",
                  "description": "お問い合わせユーザ名"
                },
                "inquiry_email": {
                  "type": "string",
                  "format": "email",
                  "description": "お問い合わせ元email"
                },
                "site_contact_email": {
                  "type": "string",
                  "format": "email",
                  "description": "お問い合わせ用メールアドレス"
                },
                "body": {
                  "type": "string",
                  "description": "お問い合わせ本文"
                },
                "is_customer_deleted": {
                  "type": "boolean",
                  "description": "お問い合わせユーザが削除されたか?"
                },
                "created_at": {
                  "type": "string",
                  "format": "date-time",
                  "description": "お問い合わせ日時"
                },
                "replies": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/reply"
                  },
                  "description": "返信"
                }
              },
              "required": [
                "id",
