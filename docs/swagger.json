    "/api/v1/articles": {
      "get": {
        "summary": "ブログ記事一覧を取得します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          },
          {
            "name": "keyword",
            "in": "query",
            "type": "string",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "記事一覧が返却されます",
            "schema": {
              "type": "object",
              "properties": {
                "domain": {
                  "type": "string"
                },
                "articles": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "body": {
                        "type": "string",
                        "x-nullable": true
                      }
                    }
                  }
                }
              },
              "required": [
                "domain",
                "articles"
              ]
            }
          }
        }
      },
      "post": {
        "summary": "ブログ記事を作成します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string",
            "example": "testsite"
          },
          {
            "name": "json_data",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "article": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "string",
                      "example": "<p>記事本文</p>"
                    },
                    "body_text": {
                      "type": "string",
                      "example": "記事本文"
                    },
                    "title": {
                      "type": "string",
                      "example": "記事タイトル"
                    },
                    "published": {
                      "type": "boolean",
                      "example": false
                    },
                    "is_careecon": {
                      "type": "boolean",
                      "example": false
                    },
                    "posted_at": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "string",
                          "example": "2019-01-01"
                        },
                        "time": {
                          "type": "string",
                          "example": "01:01:01"
                        }
                      }
                    },
                    "article_eyecatch": {
                      "type": "object",
                      "properties": {
                        "file": {
                          "type": "string",
                          "format": "byte",
                          "example": "data:image/png;base64,"
                        }
                      }
                    },
                    "article_category": {
                      "type": "integer"
                    }
                  }
                }
              }
            },
            "required": [
              "article"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "作成された記事が返却されます"
          },
          "422": {
            "description": "作成失敗が返却されます"
          }
        }
      }
    },
    "/api/v1/articles/{id}": {
      "get": {
        "summary": "記事の詳細を取得します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "記事詳細が返却されます",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                }
              },
              "required": [
                "id"
              ]
            }
          },
          "404": {
            "description": "存在しない場合はエラーが返却されます"
          }
        }
      },
      "put": {
        "summary": "記事を編集します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "json_data",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "article": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "string",
                      "example": "<p>修正記事本文</p>"
                    },
                    "body_text": {
                      "type": "string",
                      "example": "修正記事本文"
                    },
                    "title": {
                      "type": "string",
                      "example": "修正記事タイトル"
                    },
                    "published": {
                      "type": "boolean",
                      "example": false
                    },
                    "is_careecon": {
                      "type": "boolean",
                      "example": false
                    },
                    "posted_at": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "string",
                          "example": "2019-02-02"
                        },
                        "time": {
                          "type": "string",
                          "example": "02:02:02"
                        }
                      }
                    },
                    "article_eyecatch": {
                      "type": "object",
                      "properties": {
                        "file": {
                          "type": "string",
                          "format": "byte",
                          "example": "data:image/png;base64,"
                        }
                      }
                    },
                    "article_category": {
                      "type": "integer"
                    }
                  }
                }
              }
            },
            "required": [
              "title",
              "body"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "編集した記事が返却されます"
          },
          "422": {
            "description": "編集失敗が返却されます"
          }
        }
      },
      "delete": {
        "summary": "記事を削除します",
        "tags": [
          "Article"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "identify",
            "in": "query",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "削除結果が返却されます"
          },
          "404": {
            "description": "存在しないIDを指定した場合はエラーが返却されます"
          }
        }
      }
    },
    "/api/v1/auth": {
      "post": {
        "summary": "ログイン認証をしてJWTトークンを取得します",
        "tags": [
          "Auth"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "auth_params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "demo@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password12345"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JWTが返却されます",
            "examples": {
              "application/json": {
                "auth_token": "createdAuthTokenValueData"
              }
            }
          },
          "401": {
            "description": "エラーが返却されます",
            "examples": {
              "application/json": {
                "error": {
                  "user_authentication": [
                    "Invalid credentials"
                  ]
                }
              }
            }
          }
        }
      }
    },
